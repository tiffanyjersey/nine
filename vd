        let noCount = 0;

        function sayYes() {
            alert("Yay! ðŸ’– Happy Valentine's, Lang! ðŸŽ‰ðŸ¥°");
        }
        function addMoreYes(button) {
            noCount++;
            const buttonsDiv = document.querySelector('.buttons');
            let newYesButton = document.createElement('button');
            newYesButton.innerText = "Yes";
            newYesButton.onclick = sayYes;
            buttonsDiv.appendChild(newYesButton);
            
